#include <stdio.h>

struct student {

    char name[50];
    int id;
};

struct student (*GetStudent(int *room))[10] {
    static struct student students[10][10]; 

    printf("Enter the classrooms: ");
    scanf("%d", room);

    for (int i = 0; i < *room; ++i) {
        printf("Classroom %d:\n", i + 1);
        for (int j = 0; j < 10; ++j) {
            printf("Enter student %d information:\n", j + 1);
            printf("ID: ");
            scanf("%d", &students[i][j].id);
            printf("Name: ");
            scanf("%s", students[i][j].name);
        }
    }

    return students;
}

int main() {
    struct student (*children)[10];
    int group;

    children = GetStudent(&group);

    for (int i = 0; i < group; ++i) {
        printf("Classroom %d:\n", i + 1);
        for (int j = 0; j < 10; ++j) {
            printf("Student %d: ID: %d Name: %s\n", j + 1, children[i][j].id, children[i][j].name);
        }
    }

    return 0;
}
